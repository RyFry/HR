package com.sisyphus;

import java.util.ArrayList;

public class Commands {	
	
	public String processCommand(ArrayList<String> commandArray, ArrayList<City> cities, ArrayList<Mines> mines) {
		String expression = null;

		if (commandArray.get(0).toLowerCase().equals("sacrifice")) {
			processSacrifice(commandArray);
		} else if (commandArray.get(0).toLowerCase().equals("transfer")) {
			processTransfer(commandArray);
		} else if (commandArray.get(0).toLowerCase().equals("build")) {
			processBuild(commandArray);
		} else if (commandArray.get(0).toLowerCase().equals("help")) {
			processHelp(commandArray);
		} else if (commandArray.get(0).toLowerCase().equals("quit")) {
			processQuit();
		} else {
			return "Invalid Command";
		}
		
		return expression;
	}
	
	
	private void processSacrifice(ArrayList<String> commandArray) {

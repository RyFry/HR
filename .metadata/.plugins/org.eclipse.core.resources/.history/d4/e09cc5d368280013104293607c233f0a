	}


	private void processHelp(ArrayList<String> commandArray) {
		// TODO Auto-generated method stub
		
	}


	private void processQuit() {
		Sisyphus.quit();
	}


	private class CommandTree {
		
		private CommandTree[] nextTree;
		private int numBranches;
		private String error;
		private String message;
		
		public CommandTree(CommandTree[] nextTree, int numBranches, String error, String message) {
			this.nextTree = nextTree;
			this.numBranches = numBranches;
			this.error = error;
		}
	}
}

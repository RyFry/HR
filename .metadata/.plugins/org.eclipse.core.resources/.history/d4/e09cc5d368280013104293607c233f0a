package com.sisyphus;

import java.util.ArrayList;

public class Commands {	
	
	public String processCommand(ArrayList<String> commandArray, ArrayList<City> cities, ArrayList<Mines> mines) {
		String expression = null;
		
		for (int i = 0; i < commandArray.size(); i++) {
			if (commandArray.get(i).toLowerCase().equals("sacrifice")) {
				processSacrifice(commandArray);
			} else if (commandArray.get(i).toLowerCase().equals("transfer")) {
				processTransfer(commandArray);
			} else if (commandArray.get(i).toLowerCase().equals("build")) {
				processBuild(commandArray);
			} else if (commandArray.get(i).toLowerCase().equals("help")) {
				processHelp(commandArray);
			} else if (commandArray.get(i).toLowerCase().equals("quit")) {
				processQuit();
			}
			
			
			
			
			
			
		}		
		
		return expression;
	}
	
	
	private void processSacrifice(ArrayList<String> commandArray) {
		// TODO Auto-generated method stub
		
	}


	private void processTransfer(ArrayList<String> commandArray) {

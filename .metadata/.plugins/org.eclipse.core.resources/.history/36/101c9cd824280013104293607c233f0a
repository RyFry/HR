package com.sisyphus;

public class Mines {
	
	private long resources = 0;
	private long localPop = 0;
	
	private String name;
	
	public Mines(String name, long localPop) {
		this.name = name;
		this.localPop = localPop;
	}	
	
	public long rGain() {
		resources += localPop;
		return resources;
	}
	
	public long popLoss() {
		localPop -= (localPop*(2.0/5.0));
		return localPop;
	}
	
	public long transfer(City city) {
		long temp=resources;
		resources=0;
		city.gainRes(temp);
		return temp;
	}
}

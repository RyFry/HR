package com.sisyphus;

public class God {
	int hunger;

	private static String message = "Hello, sir";

	public static String getMessage() {
		return message;
	}

	public static void setMessage(String newMessage) {
		message = newMessage;
	}

	public String hungerLevel() {
		int r = (int) (Math.random()*5);
		if(hunger > 500) {
			// Satiated
			
			if(r==0)
				return "Yummm";
			else if(r==1)
				return "You have satisfied me... for now";
			else if(r==2)
				return "You do well to doom your kind in this manner";
			else if(r==3)
				return "";
			else if(r==4)
				return " ";		
		}
		else if(hunger > 400) {
			//Indifferent
			
			if(r==0)
				return " ";
			else if(r==1)
				return " ";
			else if(r==2)
				return " ";
			else if(r==3)
				return " ";
			else if(r==4)
				return " ";	
		}
		else if(hunger > 300) {
			//Hungry
			
			if(r==0)
				return " ";
			else if(r==1)
				return " ";
			else if(r==2)
				return " ";
			else if(r==3)
				return " ";
			else if(r==4)
				return " ";	
		}
		else if(hunger > 200) {
			//Ravenous
			
			if(r==0)
				return " ";
			else if(r==1)
				return " ";
			else if(r==2)
				return " ";
			else if(r==3)
				return " ";
			else if(r==4)
				return " ";	
		}
		return "0";
	}
}



